# Base App Environment Configuration Template
# Copy this file to .env.local and fill in your values

# =============================================================================
# ESSENTIAL CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
EXPO_PUBLIC_ENVIRONMENT=development

# App Configuration
EXPO_PUBLIC_APP_NAME="Your App Name"
EXPO_PUBLIC_APP_VERSION="1.0.0"

# API Configuration
EXPO_PUBLIC_API_URL=https://127.0.0.1:8000
EXPO_PUBLIC_STAGING_API_URL=https://your-staging-api.railway.app
EXPO_PUBLIC_PRODUCTION_API_URL=https://your-production-api.railway.app

# Railway Configuration (for deployment)
# These are set automatically by Railway, but you can override them
RAILWAY_ENVIRONMENT=production
PORT=8000

# =============================================================================
# AUTHENTICATION (Required if enableAuth: true)
# =============================================================================

# Auth0 Configuration
EXPO_PUBLIC_AUTH0_DOMAIN=your-domain.auth0.com
EXPO_PUBLIC_AUTH0_CLIENT_ID=your-auth0-client-id
EXPO_PUBLIC_AUTH0_AUDIENCE=your-auth0-audience

# Firebase Configuration (alternative to Auth0)
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id

# =============================================================================
# BACKEND SERVICES (Optional - only needed if features are enabled)
# =============================================================================

# OpenAI/AI Services (for AI features)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Database (Backend)
DATABASE_URL=sqlite:///./app.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================

# Analytics
EXPO_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
EXPO_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
EXPO_PUBLIC_AMPLITUDE_API_KEY=your-amplitude-key

# Push Notifications
EXPO_PUBLIC_ONESIGNAL_APP_ID=your-onesignal-app-id
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id

# Social Login
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
EXPO_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
EXPO_PUBLIC_APPLE_CLIENT_ID=your-apple-client-id

# Maps & Location
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-key
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Payment Processing
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# Email Services
SENDGRID_API_KEY=your-sendgrid-api-key
MAILGUN_API_KEY=your-mailgun-api-key

# SMS Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Internal App Distribution
# Diawi upload token used by scripts/build_and_upload_diawi.sh (do not commit secrets)
DIAWI_TOKEN=your-diawi-token

# =============================================================================
# DEVELOPMENT TOOLS (Development only)
# =============================================================================

# Debugging
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_ENABLE_FLIPPER=true

# Testing
EXPO_PUBLIC_TEST_MODE=false
EXPO_PUBLIC_MOCK_API=false

# Logging
LOG_LEVEL=debug

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# App Store Configuration
EXPO_PUBLIC_IOS_BUNDLE_ID=com.yourcompany.yourapp
EXPO_PUBLIC_ANDROID_PACKAGE=com.yourcompany.yourapp

# Deep Linking
EXPO_PUBLIC_URL_SCHEME=yourapp

# Web Configuration
EXPO_PUBLIC_WEB_DOMAIN=yourapp.com

# =============================================================================
# SECURITY (Production)
# =============================================================================

# API Keys Scope
# Note: Only EXPO_PUBLIC_ prefixed variables are available in the client
# Keep sensitive keys without the prefix (backend only)

# JWT Configuration (Backend)
JWT_SECRET=your-super-secret-jwt-signing-key
JWT_EXPIRATION=24h

# Session Configuration
SESSION_SECRET=your-session-secret

# CORS Configuration (Backend)
CORS_ORIGINS=http://localhost:3000,https://yourapp.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FEATURE-SPECIFIC CONFIGURATION
# =============================================================================

# Content Management
EXPO_PUBLIC_CMS_URL=your-cms-url
CMS_API_KEY=your-cms-api-key

# Search
EXPO_PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id
EXPO_PUBLIC_ALGOLIA_SEARCH_KEY=your-algolia-search-key
ALGOLIA_ADMIN_KEY=your-algolia-admin-key

# Real-time Features
EXPO_PUBLIC_PUSHER_APP_ID=your-pusher-app-id
EXPO_PUBLIC_PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret

# File Storage Alternatives
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================

# These can be set differently per environment

# Development
# EXPO_PUBLIC_API_URL=https://127.0.0.1:8000
# LOG_LEVEL=debug

# Staging
# EXPO_PUBLIC_API_URL=https://staging-api.yourapp.com
# LOG_LEVEL=info

# Production
# EXPO_PUBLIC_API_URL=https://api.yourapp.com
# LOG_LEVEL=error
